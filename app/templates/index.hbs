<div class='row'>
  <div class='container-fluid'>

    {{#each model as |post|}}
      {{#if post.publicVisible}}
        <div class="card">
          <h2 class='post-title'>{{#link-to 'posts' post.slug}}{{post.title}}{{/link-to}}</h2>

          <section class='post excerpt'>
            <p>{{post.body}}</p>
            <p>{{post.creator.displayName}}</p>
          </section>
        </div>
      {{/if}}
    {{else}}
      There are no posts...
    {{/each}}

  </div>
</div>
