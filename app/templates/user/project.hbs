{{#if model}}
  {{#edit-project
    project=model
    session=session
    onSaveProject=(action "save")
    delete="delete"
    createComment="createComment"
  }}
    {{#audio-project-sequencer project=model}}
      <button
        class="btn btn-primary"
        type="button"
        onclick={{action "createTrack" model}}
      >
        add track (
        <span>
          {{model.tracks.length}}
        </span>
        )
      </button>
    {{/audio-project-sequencer}}
    
    <div class='tracks'>
      {{#each model.tracks as |track|}}
        {{track-container
          isActive=(eq track.id activeTrack.id) 
          track=track
          onDeleteTrack=(action "deleteTrack")
          selectActiveTrack=(action "selectActiveTrack")
        }}
      {{else}}
        <h4> No tracks</h4>
      {{/each}}
    </div>

  {{/edit-project}}
  {{current-track-footer track=activeTrack}}
{{/if}}