{{!-- <div class="pv4 flex justify-start pointer"> --}}
{{#mdc-list-item}}
  <div>
    {{yield}}
  </div>

  {{#audio-track-sampler
    class="flex justify-between w-100"
    isActive=isActive
    sequence=track.sequence
    directory=directory
    track=track
    gain=track.gain
    isLooping=track.isLooping
    filepath=track.filepath
    outputNodeSelector="#master-compressor"
    setSamplerOnContainer=(action "setSamplerOnContainer")
    as |sampler|
  }}
    {{ui-step-sequencer 
      sequence=track.sequence 
      stepIndex=sampler.stepIndex
    }}
    <button 
      type="delete" 
      class="btn btn-danger delete-track-btn" 
      {{action "deleteTrack" track bubbles=false}}
    >
      âœ•
    </button>
  {{/audio-track-sampler}}
{{/mdc-list-item}}