{{yield}}

{{#if (eq visibleInterface 'gain')}}
  {{ui-multislider
    size=multisliderSize
    numberOfSliders=sequence.length
    values=gainStepArray
    onChangeValue=(action "updateParam" 'gainStepArray')
  }}
{{/if}}

{{#if (eq visibleInterface 'speed')}}
  speed
  {{ui-multislider
    size=multisliderSize
    numberOfSliders=sequence.length
    values=speedStepArray
    max=3
    onChangeValue=(action "updateParam" 'speedStepArray')
  }}
{{/if}}

{{#if (eq visibleInterface 'loopLength')}}
  {{ui-multislider
    size=multisliderSize
    numberOfSliders=sequence.length
    values=loopStepArray
    onChangeValue=(action "updateParam" 'loopStepArray')
  }}
{{/if}}

<div class="btn-group btn-group-xs interface-switches" role="group" aria-label="toggle-interface">
  <button {{action 'switchInterface' 'gain'}} type="button" class="btn btn-default rhythm">volume</button>
  <button {{action 'switchInterface' 'speed'}} type="button" class="btn btn-default steps">speed</button>
  <button {{action 'switchInterface' 'loopLength'}} type="button" class="btn btn-default signal">loop length</button>
</div>
