<form class="controls">
  <fieldset class="transport">
    {{!-- <button type="button" id="button_fbw" class="btn" {{action "loopAction" "reset"}}>
      {{fa-icon "fast-backward"}}
    </button> --}}
    {{#if isPlaying}}
      <button
        type="button"
        id="button_stop"
        class="btn"
        {{action "loopAction" "stop"}}
      >
        {{fa-icon "stop"}}
      </button>
    {{else}}
      <button
        type="button"
        id="button_play"
        class="btn"
        {{action "loopAction" "start"}}
      >
        {{fa-icon "play"}}
      </button>
    {{/if}}
  </fieldset>
  <label class="interval-container">
    <small>
      loop interval
      {{post.interval}}
      ms
    </small>
    {{ui-slider
      max=1000
      min=20
      size=intervalSliderSize
      step=10
      class="interval-slider"
      onChangeValue=(action "setLoopInterval" post)
      value=post.interval
    }}
  </label>
  {{yield}}
</form>