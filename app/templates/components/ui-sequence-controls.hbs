<div class="flex justify-between items-center" ...attributes>
  <UiDial
    class="ma3 flex flex-column items-center"
    @max=16
    @step=1
    @onChangeValue={{action "updateSequenceParam" "hits"}}
    @value={{hits}}
  >
  <dl class="flex">
    <dt class="fw7">hits:</dt>
    <dd class="ml1">{{hits}}</dd>
  </dl>
  </UiDial>
  <UiDial
    class="ma3 flex flex-column items-center"
    @max=16
    @step=1
    @onChangeValue={{action "updateSequenceParam" "steps"}}
    @value={{steps}}
  >
  <dl class="flex">
    <dt class="fw7">steps:</dt>
    <dd class="ml1">{{steps}}</dd>
  </dl>
  </UiDial>
  <UiDial
    class="ma3 flex flex-column items-center"
    @max=16
    @step=1
    @onChangeValue={{action "updateSequenceParam" "offset"}}
    @value={{offset}}
  >
  <dl class="flex">
    <dt class="fw7">offset:</dt>
    <dd class="ml1">{{offset}}</dd>
  </dl>
  </UiDial>
</div>