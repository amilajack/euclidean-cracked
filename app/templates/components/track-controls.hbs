<section class="pa3 w-100 overflow-hidden mw7">
  <div class="flex justify-between items-center">
    <h3>Step Automation</h3>
    {{mdc-fab
      icon="add"
      title="Add new parameter control" 
      mini=true
      click=(action (mut menuOpen) true) 
    }}
  </div>

  {{#mdc-menu
    class="w5"
    anchor="parent"
    open=menuOpen
  }}
    {{#mdc-menu-item click=(action "newControl" "slider")}}slider{{/mdc-menu-item }}
    {{#mdc-menu-item click=(action "newControl" "multislider")}}multislider{{/mdc-menu-item }}
  {{/mdc-menu}}

  <div class="flex h-100 w-100 overflow-scroll">
    {{#each track.trackControls as |trackControl|}}
      <TrackControlWrapper 
        @track={{track}} 
        @sequence={{track.sequence}} 
        @trackControl={{trackControl}}
        @stepIndex={{stepIndex}}
      />
    {{/each}}
  </div>
</section>
