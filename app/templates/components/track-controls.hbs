<div class="flex-auto pa3 w-100">
  <div class="flex flex-column w-100 overflow-scroll h-100">
    <div class="absolute top-0 left-0 h-100 ma2">
      {{mdc-fab
        class="absolute top-0"
        icon="add"
        title="Add new parameter control" 
        mini=true
        click=(action (mut menuOpen) true) 
      }}

      {{#mdc-menu
        class="w5"
        anchor="parent"
        open=menuOpen
      }}
        {{#mdc-menu-item click=(action "newControl" "slider")}}slider{{/mdc-menu-item }}
        {{#mdc-menu-item click=(action "newControl" "multislider")}}multislider{{/mdc-menu-item }}
      {{/mdc-menu}}
    </div>
    <div class="flex h-100">
      {{#each track.trackControls as |trackControl|}}
        <TrackControlWrapper @sequence={{track.sequence}} @trackControl={{trackControl}}/>
      {{/each}}
    </div>
  </div>
</div>
