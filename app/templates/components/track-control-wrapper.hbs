<div class="flex flex-column mr3 h-100">
  {{#if (eq trackControl.interfaceName "ui-multislider")}}
    {{ui-multislider
      size=uiSize
      stepIndex=stepIndex
      sequence=sequence
      numberOfSliders=dataLength
      values=trackControl.controlData
      onChangeValue=(action "onChangeValue")
    }}
  {{/if}}

  {{#if (eq trackControl.interfaceName "ui-slider")}}
    {{ui-slider
      max=1
      min=0
      size=uiSize
      step=0.01
      class="center"
      onChangeValue=(action "onChangeValue")
      value=controlData
    }}
  {{/if}}

  <div class="flex justify-between items-center">
    <span class="f7">{{trackControl.variableName}}</span>
    {{mdc-icon-button
      class="pa0"
      icon="more_vert"
      title="Track Controller Menu" 
      click=(action (mut menuOpen) true)
    }}
  </div>
  {{#if menuOpen}}
    <div class="flex flex-column">
      {{mdc-textfield
        value=trackControl.min
        label="min"
        style="outlined"
      }}
      {{mdc-textfield
        value=trackControl.max
        label="max"
        style="outlined"
      }}
      {{mdc-icon-button icon="close" title="Delete Track" class="dark-red" click=(action "delete")}}
    </div>
      


  {{/if}}
</div>