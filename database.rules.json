{
  "rules": {
    ".read": true,
    "posts": {
      "$uid": {
        ".write": "auth !== null"
      },
    },

    "tracks": {
      "$track": {
        ".write": "auth.uid === newData.child('postCreatorId').val() || newData.child('publicEditable').val() == true"
      }
    },

    "comments": {
      "$comment": {
        "body": {
          ".validate": "newData.val().length > 2"
        },
        ".validate": "newData.hasChildren(['body','user'])"
      },
      ".write": "auth !== null"

    },
    "users": {
      "$user": {
        ".write": "auth !== null "

      }

    }

  }
}
